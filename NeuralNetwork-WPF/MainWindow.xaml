<Window x:Class="NeuralNetwork_WPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:NeuralNetwork_WPF"
        mc:Ignorable="d"
        Title="MainWindow" Height="650" Width="1000">
    <Grid>
        <Button x:Name="queryButton" Content="QueryButton" HorizontalAlignment="Left" Margin="854,489,0,0" VerticalAlignment="Top" Width="96" Click="queryButton_Click" Height="32"/>
        <Button x:Name="trainButton" Content="TrainButton" HorizontalAlignment="Left" Margin="854,437,0,0" VerticalAlignment="Top" Width="96" Height="33"/>
        <Button x:Name="createButton" Content="CreateButton" HorizontalAlignment="Left" Margin="854,388,0,0" VerticalAlignment="Top" Width="96" Click="createButton_Click" Height="32"/>
        <TextBox x:Name="outputTextBox" HorizontalAlignment="Left" Height="23" Margin="862,264,0,0" TextWrapping="Wrap" Text="3" VerticalAlignment="Top" Width="75" PreviewTextInput="outputTextBox_PreviewTextInput"/>
        <TextBox x:Name="hiddenTextBox" HorizontalAlignment="Left" Height="23" Margin="862,214,0,0" TextWrapping="Wrap" Text="3" VerticalAlignment="Top" Width="75" PreviewTextInput="hiddenTextBox_PreviewTextInput"/>
        <TextBox x:Name="inputTextBox" HorizontalAlignment="Left" Height="23" Margin="862,164,0,0" TextWrapping="Wrap" Text="3" VerticalAlignment="Top" Width="75" PreviewTextInput="inputTextBox_PreviewTextInput"/>
        <TextBox x:Name="TextBox_LearningRate" HorizontalAlignment="Left" Height="23" Margin="862,114,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="75"/>
        <DataGrid x:Name="networkDataGrid" CanUserAddRows ="True" ItemsSource="{Binding newRow}" HorizontalAlignment="Left" Height="550" Margin="10,10,0,0" VerticalAlignment="Top" Width="800">
            <DataGrid.Columns>
                <DataGridTextColumn Header="InputLayer" Binding="{Binding inputValue}"/>
                <DataGridTextColumn Header="WeightsI-H" Binding="{Binding weightsIH}"/>
                <DataGridTextColumn Header="InputHidden" Binding="{Binding inputHidden}"/>
                <DataGridTextColumn Header="OutputHidden" Binding="{Binding outputHidden}"/>
                <DataGridTextColumn Header="WeightsH-O" Binding="{Binding weightsHO}"/>
                <DataGridTextColumn Header="ErrorHidden" Binding="{Binding errorHidden}"/>
                <DataGridTextColumn Header="InputOutput" Binding="{Binding inputOutput}"/>
                <DataGridTextColumn Header="OutputLayer" Binding="{Binding outputLayer}"/>
                <DataGridTextColumn Header="Target" Binding="{Binding target}"/>
                <DataGridTextColumn Header="ErrorOutput" Binding="{Binding errorOutput}"/>
            </DataGrid.Columns>
        </DataGrid>
        <Label Content="Learning Rate" HorizontalAlignment="Left" Margin="859,94,0,0" VerticalAlignment="Top" RenderTransformOrigin="-0.5,0.615"/>
        <Label Content="Input Nodes" HorizontalAlignment="Left" Margin="859,144,0,0" VerticalAlignment="Top" RenderTransformOrigin="-0.5,0.615"/>
        <Label Content="Hidden Nodes" HorizontalAlignment="Left" Margin="859,194,0,0" VerticalAlignment="Top" RenderTransformOrigin="-0.5,0.615"/>
        <Label Content="Output Nodes" HorizontalAlignment="Left" Margin="859,244,0,0" VerticalAlignment="Top" RenderTransformOrigin="-0.5,0.615"/>
    </Grid>
</Window>
